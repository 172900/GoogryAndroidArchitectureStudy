<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.architecturestudy.upbitmarket.UpbitViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".upbitmarket.UpbitFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".upbitmarket.UpbitActivity">

            <!-- Market Types Button -->
            <TextView
                android:id="@+id/tv_market_krw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{(v) -> vm.showMarketPrice(v)}"
                android:text="@string/market_krw"
                android:textColor="@color/midNightBlue"
                app:layout_constraintEnd_toStartOf="@id/tv_market_btc"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_market_btc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{(v) -> vm.showMarketPrice(v)}"
                android:text="@string/market_btc"
                android:textColor="@color/silver"
                app:layout_constraintEnd_toStartOf="@id/tv_market_eth"
                app:layout_constraintStart_toEndOf="@id/tv_market_krw"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_market_eth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{(v) -> vm.showMarketPrice(v)}"
                android:text="@string/market_eth"
                android:textColor="@color/silver"
                app:layout_constraintEnd_toStartOf="@id/tv_market_usdt"
                app:layout_constraintStart_toEndOf="@id/tv_market_btc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_market_usdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{(v) -> vm.showMarketPrice(v)}"
                android:text="@string/market_usdt"
                android:textColor="@color/silver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_market_eth"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tv_coin_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/coin_name"
                app:layout_constraintEnd_toStartOf="@id/tv_current_price"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_market_krw" />

            <TextView
                android:id="@+id/tv_current_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/current_price"
                app:layout_constraintEnd_toStartOf="@id/tv_net_change"
                app:layout_constraintStart_toEndOf="@id/tv_coin_name"
                app:layout_constraintTop_toBottomOf="@id/tv_market_krw" />

            <TextView
                android:id="@+id/tv_net_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/net_change"
                app:layout_constraintEnd_toStartOf="@id/tv_trading_value"
                app:layout_constraintStart_toEndOf="@id/tv_current_price"
                app:layout_constraintTop_toBottomOf="@id/tv_market_krw" />

            <TextView
                android:id="@+id/tv_trading_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/trading_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_net_change"
                app:layout_constraintTop_toBottomOf="@id/tv_market_krw" />

            <!-- List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coin_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_coin_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>

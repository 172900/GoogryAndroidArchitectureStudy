<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
android:orientation="horizontal">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tickerName" android:textSize="14dp" android:layout_marginLeft="24dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/currentPrice" android:textSize="14dp" android:layout_marginLeft="48dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/comparePrice" android:textSize="14dp" android:layout_marginLeft="24dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/changePrice" android:textSize="14dp" android:layout_marginLeft="24dp"/>
</LinearLayout>

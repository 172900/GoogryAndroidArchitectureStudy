<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="coinViewModel"
                type="my.gong.studygong.viewmodel.CoinViewModel"/>

        <variable
                name="curreny"
                type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linear_coin_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

            <TextView
                    android:id="@+id/txt_coin_market"
                    style="@style/TextViewCoinMarket"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@{curreny}"
                    android:onClick="@{() -> coinViewModel.selectBaseCurrnecy(curreny)}"
                    />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

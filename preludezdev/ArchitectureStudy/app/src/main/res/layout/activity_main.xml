<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.example.architecturestudy.util.Filter.Type" />

        <variable
            name="viewModel"
            type="com.example.architecturestudy.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextAppearance="@style/tab_text">

        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/ll_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:onClick="@{()-> viewModel.showSortedTypeArrow(Type.MARKET)}"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout">

            <TextView
                android:id="@+id/tv_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coin_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/iv_arrow_coin_name"
                android:layout_width="@dimen/standard_iv_arrow_size"
                android:layout_height="@dimen/standard_iv_arrow_size"
                android:layout_marginStart="4dp"
                android:contentDescription="@null"
                android:visibility="@{viewModel.type.equals(Type.MARKET) ? View.VISIBLE : View.INVISIBLE}"
                app:isSelected="@{viewModel.isSelected}"
                app:srcCompat="@drawable/ic_arrow_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_curr_price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="@{()-> viewModel.showSortedTypeArrow(Type.TRADE_PRICE)}"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ll_price_compare"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/ll_coin_name"
            app:layout_constraintTop_toTopOf="@id/ll_coin_name">

            <TextView
                android:id="@+id/tv_curr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/curr_price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/iv_arrow_curr_price"
                android:layout_width="@dimen/standard_iv_arrow_size"
                android:layout_height="@dimen/standard_iv_arrow_size"
                android:contentDescription="@null"
                android:visibility="@{viewModel.type.equals(Type.TRADE_PRICE) ? View.VISIBLE : View.INVISIBLE}"
                app:isSelected="@{viewModel.isSelected}"
                app:srcCompat="@drawable/ic_arrow_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price_compare"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="@{()-> viewModel.showSortedTypeArrow(Type.SIGNED_CHANGED_RATE)}"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/ll_total_trade"
            app:layout_constraintTop_toTopOf="@id/ll_coin_name">

            <TextView
                android:id="@+id/tv_price_compare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/price_compare"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/iv_arrow_price_compare"
                android:layout_width="@dimen/standard_iv_arrow_size"
                android:layout_height="@dimen/standard_iv_arrow_size"
                android:contentDescription="@null"
                android:visibility="@{viewModel.type.equals(Type.SIGNED_CHANGED_RATE) ? View.VISIBLE : View.INVISIBLE}"
                app:isSelected="@{viewModel.isSelected}"
                app:srcCompat="@drawable/ic_arrow_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_total_trade"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:onClick="@{()-> viewModel.showSortedTypeArrow(Type.ACC_TRADE_PRICE_H)}"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_coin_name">

            <TextView
                android:id="@+id/tv_total_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/total_trade"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/iv_arrow_total_trade"
                android:layout_width="@dimen/standard_iv_arrow_size"
                android:layout_height="@dimen/standard_iv_arrow_size"
                android:contentDescription="@null"
                android:visibility="@{viewModel.type.equals(Type.ACC_TRADE_PRICE_H) ? View.VISIBLE : View.INVISIBLE}"
                app:isSelected="@{viewModel.isSelected}"
                app:srcCompat="@drawable/ic_arrow_selector" />
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_total_trade">

        </androidx.viewpager.widget.ViewPager>

        <ImageView
            android:id="@+id/iv_reload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_oval"
            android:contentDescription="@null"
            android:onClick="@{()-> viewModel.reloadData()}"
            android:padding="10dp"
            android:src="@drawable/ic_reload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
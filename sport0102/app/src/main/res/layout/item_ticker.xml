<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_marginBottom="5dp"
	android:background="@drawable/stroke_1dp_radius"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:padding="5dp">

	<TextView
		android:id="@+id/item_ticker_tv_coin_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_weight="1"
		tools:text="BTC"
		android:textColor="@color/black"
		android:textSize="18sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/item_ticker_tv_now_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:layout_weight="0.9"
		tools:text="9,661,000"
		android:textAlignment="textEnd"
		android:textColor="@color/black"
		android:textSize="14sp" />

	<TextView
		android:id="@+id/item_ticker_tv_compare_before"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:layout_weight="1.1"
		android:maxLines="1"
		tools:text="-0.39%"
		android:textAlignment="textEnd"
		android:textColor="@color/black"
		android:textSize="14sp" />

	<TextView
		android:id="@+id/item_ticker_tv_total_deal_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:layout_weight="1.1"
		android:maxLines="1"
		tools:text="180,051 M"
		android:textAlignment="textEnd"
		android:textColor="@color/black"
		android:textSize="14sp" />
</LinearLayout>
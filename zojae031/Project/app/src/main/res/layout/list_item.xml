<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@android:color/darker_gray"
              android:layout_margin="4dp" android:padding="4dp">

    <TextView
            android:text="코인명"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/name" android:layout_weight="1"
            android:textColor="@android:color/black"
            android:padding="4dp" android:gravity="center"/>
    <TextView
            android:text="거래대금"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/trade_price" android:layout_weight="1"
            android:textColor="@android:color/black"
            android:gravity="center" android:layout_margin="0dp" android:singleLine="true" android:padding="4dp"/>
    <TextView
            android:text="전일대비"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/change_rate" android:layout_weight="1"
            android:textColor="@android:color/black"
            android:gravity="center" android:singleLine="true" android:padding="4dp"/>
    <TextView
            android:text="현재가"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/acc_trade_price" android:layout_weight="1"
            android:textColor="@android:color/black"
            android:gravity="center" android:singleLine="true" android:padding="4dp"/>
</LinearLayout>